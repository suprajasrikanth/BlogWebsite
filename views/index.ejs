<% include partials/header %>
   <div class="ui main text container">
   	<div class="ui huge header">Blogs</div>
    <div class="ui top attached segment">
<div class="ui divided items">
	<% blogs.forEach(function(blog){ %>
	 <div class="item">
	    <div class="image">
			<a href="/blogs/<%=blog._id %>">
				<img src="<%= blog.image %>"  style="width:165px;height:135px;border:0"></a>
	    </div>
	    <div class="content">
	      <a href="/blogs/<%=blog._id %>" class="header"><%= blog.title %></a>
	      <div class="meta">
	        <span class="cinema"><%= blog.created.toDateString() %></span>
	      </div>
	      <div class="description">
	        <% if (typeof blog.body == 'undefined' ) { %>
            <p> no content</p>  
        <% } else { %>
            <p> <%= blog.body.substring(0, 100) %>...</p>  
 		<% } %>
	      </div>
	      <div class="extra">
	        <a href="/blogs/<%=blog._id %>" class="ui floated basic violet button">
	          Read More...
	        </a>
	      </div>
	    </div>
	  </div>
	<% }); %>
</div>
</div>
    
  </div>
<% include partials/footer %>
