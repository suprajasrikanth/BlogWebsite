<% include ../partials/header %>
<h1 style="text-align: center">Add New Comment to <%= blog.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="field">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="field">
                    <button class="ui big violet basic button">Submit!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
<% include ../partials/footer %>