<% include partials/header %>
    <div class="ui main text container">
   	    <div class="ui huge header"><%=blog.title%></div>
        <div class="ui top attached segment">
	        <div class="item">
	           <img class="ui centered rounded image" src="<%= blog.image %>">
	            <div class="content">
	                <div class="meta">
    	                <span class="date"><%= blog.created.toDateString() %></span>
	                </div>
            	     <div class="description">
            	        <p><%- blog.body %></p>
						 <p>
                        <em>Submitted By <%= blog.author.username %></em>
                    	</p>
					</div>
					<hr>
					<% if(currentUser && blog.author.id.equals(currentUser._id)){ %>
					<a href="/blogs/<%=blog._id%>/edit" class="ui orange basic button">Update Blog</a>
            		<form style="display: inline" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                		<button class="ui red basic button" type="submit">Delete Blog</button>
            		</form>
					<% } %>
			<a href="/blogs/<%=blog._id%>/comments/new" class="ui green basic button">Add Comment</a>
						<div class = "ui comments">
							<h3 class="ui dividing header">Comments</h3>
						 <% blog.comments.forEach(function(comment){ %>
							<div class="comment">
								<div class="content"><strong><%= comment.author.username %></strong>
									<div class="text"><%= comment.text %></div>
								</div>
							</div>
						<% }) %>
						 </div>
	            </div>
            </div>
            
        </div>
    </div>
<% include partials/footer %>
